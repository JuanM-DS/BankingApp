@using BankingApp.Core.Application.ViewModels.Account
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model ForgotPasswordViewModel
@{
    var Success = ViewData["Success"] as bool?;
    Success = Success ?? true;
    var error = ViewData["Error"] as string;
}
<link rel="stylesheet" href="~/SM.WebApplication.styles.css" asp-append-version="true" />


<div class="mt-5 container">
    <div class="w40">
        <div class="card">
            <div class="card-header bg-success fs-4 text-white">
                <div class="d-flex justify-content-between">
                    <h5>Recuperar contraseña</h5>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Login" asp-action="ForgotPassword">
                    @if (!Success.Value)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <p class="fw-light">Para cambiar tu contraseña necesitamos verificar tu correo</p>
                        <p class="fw-light">Se te enviará un correo con el enlace para resetear tu contraseña</p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" for="exampleInputEmail1" class="form-label">Dirección de Correo</label>
                        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="btn-form d-flex align-items-center gap-2">
                        <button type="submit" class="btn btn-success">Continuar</button>
                        <a asp-controller="Login" asp-action="Index" class="btn btn-warning">&larr;Volver atrás</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>