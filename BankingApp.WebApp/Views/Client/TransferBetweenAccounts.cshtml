@using BankingApp.Core.Application.ViewModels.Payment
@model SaveTransferBetweenAccountsViewModel
@{
    ViewData["Title"] = "Transferencia entre cuentas";

}

<div class="container">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            <h5 class="fw-bold">@ViewBag.Message</h5>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-success text-light">
                    <h4>Transferencia entre cuentas</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Client" asp-action="TransferBetweenAccounts" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label asp-for="FromAccountId" class="form-label">Cuenta de ahorro origen</label>
                            <select asp-for="FromAccountId" class="form-select">
                                <option selected value="0" class="text-muted">Seleccione una opcion</option>
                                @foreach (var Account in Model.Accounts)
                                {
                                    <option value="@Account.Id">@Account.Id</option>
                                }
                            </select>
                            <span asp-validation-for="FromAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ToAccountId" class="form-label">Cuenta de ahorro de destino</label>
                            <select asp-for="ToAccountId" class="form-select">
                                <option selected value="0" class="text-muted">Seleccione una opcion</option>
                                @foreach (var Account in Model.Accounts)
                                {
                                    <option value="@Account.Id">@Account.Id</option>
                                }
                            </select>
                            <span asp-validation-for="ToAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto a pagar: </label>
                            <input asp-for="Amount" type="number" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                       
                        <button type="submit" class="btn btn-success">Realizar</button>
                        <a asp-controller="Client" asp-action="Index" class="btn btn-warning">&larr;Volver atrás</a>


                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

