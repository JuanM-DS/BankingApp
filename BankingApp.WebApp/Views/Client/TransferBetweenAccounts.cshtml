@using BankingApp.Core.Application.ViewModels.Payment
@model SaveTransferBetweenAccountsViewModel
@{
    ViewData["Title"] = "Transferencia entre cuentas";

}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Transferencia entre cuentas</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Client" asp-action="" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label asp-for="ToAccountId" class="form-label">Cuenta de ahorro de destino</label>
                            <select asp-for="ToAccountId" class="form-select">
                                <option value="">Seleccione una opcion</option>
                                @foreach (var beneficiary in Model.ToAccounts)
                                {
                                    <option value="@beneficiary.AccountNumber">@beneficiary.AccountNumber</option>
                                }
                            </select>
                            <span asp-validation-for="ToAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FromAccountId" class="form-label">Cuenta de ahorro origen</label>
                            <select asp-for="FromAccountId" class="form-select">
                                <option value="">Seleccione una opcion</option>
                                @foreach (var Account in Model.FromAccounts)
                                {
                                    <option value="@Account.Id">@Account.Id</option>
                                }
                            </select>
                            <span asp-validation-for="FromAccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto a pagar: </label>
                            <input asp-for="Amount" type="number" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>


                        @*                         <input type="hidden" asp-for="Id" />
                        *@
                        <button type="submit" class="btn btn-primary">Realizar pago</button>
                        <a asp-controller="Client" asp-action="Index" class="btn btn-warning">Volver atras</a>

                        @*                         <input type="hidden" asp-for="Id" />
                        *@
                        <button type="submit" class="btn btn-primary">Realizar</button>
                        <a asp-controller="Client" asp-action="Index" class="btn btn-warning">Volver atras</a>


                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

